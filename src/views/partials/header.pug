header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li
                a(href="/") Home
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li
                    a(href="/videos/upload") Upload Video
                li
                    a(href=`/user/${loggedInUser._id}`)
                        if loggedInUser.avatarURL === ""
                            span ‚ù§
                        else
                            if loggedInUser.avatarURL
                                img(src="/" + loggedInUser.avatarURL).avatar
                            else if loggedInUser.socialOnly
                                img(src=loggedInUser.avatarURL).avatar
                            else
                                p #{`Needs\nAvatar`}
                li
                    a(href="/user/edit") Edit Profile
                li
                    a(href="/user/logout") Log out
            else
                li
                    a(href="/login") login
                li
                    a(href="/join").header__btn Join