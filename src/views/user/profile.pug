extends ../base
include ../mixins/video

block content
    div.profile__data
        if loggedInUser.avatarURL
            img(src="/" + loggedInUser.avatarURL).avatar
        else if loggedInUser.socialOnly
            img(src=loggedInUser.avatarURL).avatar
        else
            p #{`Needs\nAvatar`}
        h3=user.nickname
    div.video__grid
        each video in user.videos
            +video(video)
        else
            span.empty_message Sorry, We can't find anything.