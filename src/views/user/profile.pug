extends ../base
include ../mixins/video

block content
    div.profile__data
        if loggedInUser.socialOnly
            img(src=user.avatarURL).avatar
        else
            img(src="/" + user.avatarURL).avatar
        h3=user.nickname
    div.video__grid
        each video in user.videos
            +video(video)
        else
            span.empty_message Sorry, We can't find anything.